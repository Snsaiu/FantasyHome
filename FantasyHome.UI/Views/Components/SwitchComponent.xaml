<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Name="sw"
             x:Class="FantasyHome.UI.Views.Components.SwitchComponent">

    <Frame CornerRadius="10" BackgroundColor="{Binding Source={x:Reference sw},Path=BarColor}">
        <Frame.GestureRecognizers >
            <TapGestureRecognizer Command="{Binding Source={x:Reference sw},Path=TouchCommand}"></TapGestureRecognizer>
        </Frame.GestureRecognizers>

        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

            <Image Source="{Binding Source={x:Reference sw},Path=Icon}"/>
            <Label HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="White" FontAttributes="Bold" Text="{Binding Source={x:Reference sw},Path=Title}"></Label>
        </StackLayout>

    </Frame>
</ContentView>
