
<Menu Theme="MenuTheme.Dark"
      Mode="MenuMode.Inline"
      OpenKeys=this.openKeys
      OnOpenChange=this.onOpenChange
      InlineCollapsed=Collapsed>
    <MenuItem RouterLink="/" RouterMatch="NavLinkMatch.All">
        <Icon Type="home" Theme="outline"></Icon>
        首页
    </MenuItem>
    <SubMenu Key="user_auth" Title="用户权限">
        <TitleTemplate>
            <span>
                <Icon Type="verified" Theme="outline" />
                <span>用户权限</span>
            </span>
        </TitleTemplate>
        <ChildContent>
            <MenuItem Key="user_manager" RouterLink="/user_auth/user" RouterMatch="NavLinkMatch.All">
                <Icon Type="user" Theme="outline"></Icon>
                <span>用户管理</span>
            </MenuItem>
            <MenuItem Key="role_manager" RouterLink="/user_auth/role" RouterMatch="NavLinkMatch.All">
                <Icon Type="control" Theme="outline" />
                <span>角色管理</span>
            </MenuItem>
            <MenuItem Key="resource_manager" RouterLink="/user_auth/resource" RouterMatch="NavLinkMatch.All">
                <Icon Type="api" Theme="outline" />
                <span>资源管理</span>
            </MenuItem>
        </ChildContent>
    </SubMenu>
    <SubMenu Key="system_manager" Title="系统管理">
        <TitleTemplate>
            <span>
                <Icon Type="setting" Theme="outline" />
                <span>系统管理</span>
            </span>
        </TitleTemplate>
        <ChildContent>
            <MenuItem Key="3" RouterLink="/system_manager/log" RouterMatch="NavLinkMatch.All">
                <Icon Type="alert" Theme="outline" />
                <span>系统日志</span>
            </MenuItem>
            <MenuItem Key="4" RouterLink="/system_manager/audit" RouterMatch="NavLinkMatch.All">
                <Icon Type="eye" Theme="outline" />
                <span>操作审计</span>
            </MenuItem>
        </ChildContent>
    </SubMenu>
</Menu>