@inherits LayoutComponentBase
<div class="container__b__0">
    <div class="lang">
        <!--todo: selectLang-->
    </div>
    <div class="content">
        <div class="top">
            <div class="header">
                <a>
                    <img alt="logo" class="logo" src="assets/logo.png" />
                    <span class="title">@systemConfig.SystemName</span>
                </a>
            </div>
            <div class="desc">@systemConfig.SystemDescription</div>
        </div>
        <ReuseTabs @ref="reuseTabs" Class="top-row px-4" TabPaneClass="hide" />
